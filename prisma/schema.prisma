// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  mobileNumber String?
  userName     String?
  userType     String?
  otp          String?
  deviceId     String?
  is_active    Boolean  @default(true)
  is_deleted   Boolean  @default(false)
  created_at   DateTime @default(now())
}

model Driver {
  id            Int          @id @default(autoincrement())
  mobileNumber  String?
  driverName    String?
  address       String?
  pincode       String?
  city          String?
  state         String?
  pancard       String?
  vehicleRC     String?
  vehicle       String?
  vehicleNumber String?
  dl            String?
  voterId       String?
  userType      String?
  otp           String?
  deviceId      String?
  vehicleType   vehicleType?
  flag          Boolean      @default(false)
  is_active     Boolean      @default(true)
  is_deleted    Boolean      @default(false)
  created_at    DateTime     @default(now())
}

enum vehicleType {
  SEDAN
  AUTO
  SUV
}

model cityLocation {
  id         Int      @id @default(autoincrement())
  cityName   String?
  latitude   String?
  longitude  String?
  is_active  Boolean  @default(true)
  is_deleted Boolean  @default(false)
  created_at DateTime @default(now())
}

model rideBooking {
  id              Int            @id @default(autoincrement())
  userName        String?
  driverName      String?
  userMobile      String?
  driverMobile    String?
  currentCity     String?
  destinationCity String?
  travelDate      DateTime?
  rideCompleted   Boolean?       @default(false)
  status          bookingStatus?
  is_active       Boolean        @default(true)
  is_deleted      Boolean        @default(false)
  created_at      DateTime       @default(now())
}

enum bookingStatus {
  CONFIRMED
  PENDING
  CANCELLED
}
